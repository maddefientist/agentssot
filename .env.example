# Core database
POSTGRES_DB=ssot
POSTGRES_USER=ssot
POSTGRES_PASSWORD=change_me_strong_password
DATABASE_URL=postgresql+psycopg://ssot:change_me_strong_password@db:5432/ssot

# API
API_PORT=8088
LOG_LEVEL=info
DEFAULT_TOP_K=5
MAX_SNIPPET_CHARS=900

# Authentication and bootstrap
# Comma-separated fallback namespaces used for the first bootstrap admin key
BOOTSTRAP_ADMIN_NAMESPACES=default

# Embeddings plugin
EMBEDDING_PROVIDER=none
# NOTE: Embedding dimension must match your embedding model output.
# For Ollama `qwen3-embedding:latest`, the dimension is 4096.
EMBEDDING_DIM=1536
OPENAI_API_KEY=
OPENAI_EMBED_MODEL=text-embedding-3-small
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

# LLM summarizer plugin
LLM_PROVIDER=none
OPENAI_CHAT_MODEL=gpt-4o-mini
OLLAMA_CHAT_MODEL=llama3.1

# Session compaction
COMPACTION_ENABLED=true
COMPACTION_EVENT_THRESHOLD=80
COMPACTION_CHAR_THRESHOLD=24000
COMPACTION_INTERVAL_SECONDS=60

# Vector index toggle
ENABLE_HNSW_INDEX=false

# Optional DB exposure (use `docker compose --profile db-port up -d` only when true)
EXPOSE_DB_PORT=false

# Backups
BACKUP_RETENTION_DAYS=14

# Optional pgAdmin profile
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me
